<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemviewNewsLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/news_itemview_news_height"
    android:padding="@dimen/news_itemview_news_padding"
    android:orientation="horizontal"
    >

    <ImageView
        android:id="@+id/newsImageView"
        android:layout_width="@dimen/news_imageview_width"
        android:layout_height="@dimen/news_imageview_height"
        android:layout_marginRight="@dimen/news_imageview_margin_right"
        android:background="@color/gray"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/news_text_container_margin_left"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/newsSectionTypeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/news_type_textview_padding_top"
            android:paddingLeft="@dimen/news_type_textview_padding_left"
            android:paddingRight="@dimen/news_type_textview_padding_right"
            android:paddingBottom="@dimen/news_type_textview_padding_bottom"
            android:layout_marginBottom="@dimen/news_type_textview_margin_bottom"
            android:textSize="@dimen/news_type_textview_text_size"
            android:textStyle="bold"
            android:textColor="@color/gray"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/newsTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/news_title_textview_padding_top"
            android:paddingLeft="@dimen/news_title_textview_padding_left"
            android:paddingRight="@dimen/news_title_textview_padding_right"
            android:layout_marginTop="@dimen/news_title_textview_margin_top"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="Comissão do senado aprova união estável entre pessoas do mesmo."
            android:textSize="@dimen/news_title_textview_text_size"
            android:textStyle="bold"
            android:textColor="@color/very_heavy_blue"
            />

    </LinearLayout>

</LinearLayout>