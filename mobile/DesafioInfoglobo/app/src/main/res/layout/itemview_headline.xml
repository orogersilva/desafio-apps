<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/itemviewHeadlineLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/headline_itemview_headline_height"
    android:background="@color/gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingLeft="@dimen/headline_text_container_padding_left"
        android:paddingRight="@dimen/headline_text_container_padding_right"
        android:paddingBottom="@dimen/headline_text_container_padding_bottom"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/headlineSectionTypeTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/headline_type_textview_padding"
            android:layout_marginTop="@dimen/headline_type_textview_margin_top"
            android:layout_marginBottom="@dimen/headline_type_text_view_margin_bottom"
            android:background="@color/black"
            android:textSize="@dimen/headline_type_textview_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/headlineTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/headline_title_textview_padding"
            android:layout_marginTop="@dimen/headline_title_textview_margin_top"
            android:maxLines="4"
            android:ellipsize="end"
            android:textSize="@dimen/headline_title_textview_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            />

    </LinearLayout>

</RelativeLayout>